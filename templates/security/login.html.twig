{% extends 'base.html.twig' %}

{% block title %}Вход{% endblock %}

{% block html_class %}signin{% endblock %}
{% block body_class %}signin text-center{% endblock %}

{% block body %}
    <form method="post" class="form-signin">


        <a href="https://github.com" target="_blank"><img class="mb-1" src="{{ asset('images/open_source_logo.png') }}" alt=""
                                          width="72" height="72"></a>
        <h1 class="h3 mb-3 font-weight-normal">Авторизация</h1>
        <label for="inputUsername" class="sr-only">Имя пользователя</label>
        <input type="text" value="{{ last_username }}" name="username" placeholder="Имя пользователя" id="inputUsername"
               class="form-control" required autofocus>
        <label for="inputPassword" class="sr-only">Password</label>
        <input type="password" placeholder="Пароль" name="password" id="inputPassword" class="form-control" required>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >

        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
        #}

        <button class="btn btn-lg btn-primary btn-block" type="submit">
            Войти
        </button>
        {% if error %}
            <div class="mt-3 alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
    </form>

{% endblock %}
